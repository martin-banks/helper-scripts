{
  // "reference": "https://code.visualstudio.com/docs/getstarted/theme-color-reference",
  "window.zoomLevel": -1,
  "workbench.colorTheme": "Ayu Mirage",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.fontSize": 18,
  "editor.fontFamily": "Fira Code",
  "editor.fontWeight": "100",
  "editor.fontLigatures": true,
  "editor.lineHeight": 30,
  "workbench.fontAliasing": "antialiased",
  "editor.wordWrap": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "boundary",

  "emmet.includeLanguages": {
    "javascript": "html"
  },

  "files.exclude": {
    "**/.git": false
  },
  "workbench.startupEditor": "newUntitledFile",
  "editor.tokenColorCustomizations": {
    "comments": "#4e5b6a",
    "textMateRules": [
      {
        "scope": "punctuation.quasi.element.begin.js",
        "settings" : {
          "foreground": "#cf66d8"
        }
      },
      {
        "scope": "punctuation.quasi.element.end.js",
        "settings" : {
          "foreground": "#cf66d8"
        }
      },
      {
        "scope": "punctuation.definition.template-expression.begin.js",
        "settings" : {
          "foreground": "#cf66d8"
        }
      },
      {
        "scope": "punctuation.definition.template-expression.end.js",
        "settings" : {
          "foreground": "#cf66d8"
        }
      },
      {
        "scope": "string.quasi.js",
        "settings": {
          "foreground": "#a9f778",
        }
      },
      {
        "scope": "string.template.js",
        "settings": {
          "foreground": "#a9f778",
        }
      },
      {
        "scope": "entity.quasi.element.js",
        "settings": {
          "foreground": "#fff"
        }
      }
    ]
  },
  "workbench.colorCustomizations": {
    "editor.background": "#19202b",
    // "activityBar.background": "#000",
    "editor.lineHighlightBackground": "#00000066",
    "terminal.background": "#10141a",
    "tab.activeBackground": "#19202b",
    "tab.activeBorder": "#fff700",
    "tab.unfocusedActiveBorder": "#8f8c29"
  },

  "eslint.validate": [
    "javascript", {
      "language": "vue",
      "autoFix": true
    }
  ]

}
